{
	"compilerOptions": {
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
		"types": ["node"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist/esm",
		"sourceMap": true,
		"strict": true,
		"target": "ES6"
	},
	"include": ["src", "themes.ts", "styled.d.ts"],
	"exclude": ["node_modules/"]
}
